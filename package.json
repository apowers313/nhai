{
  "name": "nhai",
  "version": "1.0.0",
  "description": "NetHack AI based on Concept Reinforcement Learning (CRL)",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "dev:test": "npm-watch test:dev",
    "dev:docs": "npm-watch docs",
    "dev:coverage": "npm-watch coverage",
    "dev:lint": "npm-watch lint",
    "test": "mocha",
    "test:dev": "nyc --reporter=text mocha -- --reporter min",
    "lint": "eslint \"lib/**/*.js\" \"src/**/*.js\" \"test/**/*.js\"",
    "coverage": "nyc --reporter=text --reporter=html mocha && open coverage/index.html",
    "coverage:publish": "nyc --reporter=text-lcov mocha | coveralls",
    "docs": "echo \"*** Docs created at: ./docs/index.html\" && jsdoc -c ./.jsdoc-conf.json && cp jsdoc.css docs",
    "docs:publish": "gh-pages --silent --repo https://$GH_TOKEN@github.com/apowers313/nhai.git --dist docs"
  },
  "watch": {
    "test:dev": {
      "patterns": [
        "src",
        "test",
        "lib"
      ],
      "quiet": true,
      "inherit": true
    },
    "test:docs": {
      "patterns": [
        "src",
        "lib"
      ],
      "quiet": true,
      "inherit": true
    },
    "lint": {
      "patterns": [
        "src",
        "test",
        "lib"
      ],
      "quiet": true,
      "inherit": true
    },
    "test:coverage": {
      "patterns": [
        "src",
        "test",
        "lib"
      ],
      "quiet": true,
      "inherit": true
    }
  },
  "author": "Adam Powers <apowers@ato.ms>",
  "repository": {
    "type": "git",
    "url": "https://github.com/apowers313/nhai"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "docdash": "^1.2.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-mocha": "^8.0.0",
    "gh-pages": "^3.1.0",
    "jsdoc": "^3.6.6",
    "mocha": "^8.1.3",
    "npm-watch": "^0.7.0",
    "nyc": "^15.1.0",
    "std-mocks": "^1.0.1",
    "tui-jsdoc-template": "^1.2.2"
  },
  "dependencies": {
    "bunyan": "^1.8.14",
    "bunyan-debug-stream": "^2.0.0"
  }
}
