{
  "name": "nhai",
  "version": "1.0.0",
  "description": "NetHack AI based on Concept Reinforcement Learning (CRL)",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "mocha",
    "test:coverage": "nyc --reporter=text --reporter=html mocha && open coverage/index.html",
    "test:docs": "jsdoc -c ./.jsdoc-conf.json && cp jsdoc.css docs && open docs/index.html",
    "lint": "eslint \"lib/**/*.js\" \"test/**/*.js\"",
    "coverage": "nyc --reporter=text-lcov mocha | coveralls",
    "docs": "jsdoc -c ./.jsdoc-conf.json && cp jsdoc.css docs",
    "docs:publish": "gh-pages --silent --repo https://$GH_TOKEN@github.com/apowers313/nhai.git --dist docs"
  },
  "author": "Adam Powers <apowers@ato.ms>",
  "repository": {
    "type": "git",
    "url": "https://github.com/apowers313/nhai"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "docdash": "^1.2.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-mocha": "^8.0.0",
    "gh-pages": "^3.1.0",
    "jsdoc": "^3.6.6",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "std-mocks": "^1.0.1",
    "tui-jsdoc-template": "^1.2.2"
  },
  "dependencies": {
    "bunyan": "^1.8.14"
  }
}
