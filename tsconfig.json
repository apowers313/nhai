{
    "extends": "ts-node/node16/tsconfig.json",
    "include": [
        ".eslintrc.js",
        "gulpfile.ts",
        "mod.ts",
        "lib/Config.ts",
        "test/config.test.ts",
        "lib/Log.ts",
        "test/log.test.ts",
        "lib/Utility.ts",
        "test/utility.test.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "outDir": "./.ts-node",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "types": [
            "node",
            "mocha",
            "chai",
            "bunyan"
        ]
    },
    "typedocOptions": {
        "out": "docs",
        "entryPoints": "mod.ts"
    }
}